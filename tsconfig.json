{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "declaration": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "typeRoots": ["node_modules/@figma", "node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
