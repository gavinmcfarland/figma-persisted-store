{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./dist/types",
        "emitDeclarationOnly": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "resolveJsonModule": true,
        "typeRoots": ["node_modules/@figma", "node_modules/@types"],
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "test"]
}
